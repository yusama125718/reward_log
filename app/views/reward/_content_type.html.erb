<div class="filter card p-3">
  <%= search_form_for @q, url: serch_content_type_reward_index_path, html: { data: { turbo_frame: "content-list" } } do |f| %>
    <div class="row align-items-center p-2 g-3">
      <div class="col-md-2">
        <%= f.label "種別名", class: "col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.search_field :name_cont, class: 'form-control', placeholder: '種別名' %>
      </div>
    </div>
    <div class="row p-2">
      <div class="col-md-1 p-1">
        <%= f.submit '検索', class: 'btn btn-primary' %>
      </div>
      <div class="col-md-2 p-1">
        <%= link_to '全件表示', serch_content_type_reward_index_path, data: { turbo_frame: "content-list" }, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<div id="content-list" class="list p-2">
  <%= render partial: "content_type_list" %>
</div>