<%= turbo_stream.update @target + "-selector" do %>
  <div class="col-md-8">
    <input class="form-control" placeholder="選択して下さい" type="text" value="<%= @object.try(:name) %>" disabled/>
  </div>
  <div class="col-md-2 px-2">
    <%= link_to "選択", open_modal_reward_index_path(target: @target), data: { turbo_stream: true }, class: "btn btn-primary" %>
  </div>
  <% unless @object.nil? %>
    <div class="col-md-2 px-2">
      <%= link_to "解除", set_modal_params_reward_index_path(target: @target, value: ""), data: { turbo_stream: true }, class: "btn btn-danger" %>
    </div>
  <% end %>
<% end %>
<%= turbo_stream_action_tag "set_modal_value", target: "#{@target}_id", value: @object.try(:id) || "" %>
<%= turbo_stream_action_tag "close_modal" %>
