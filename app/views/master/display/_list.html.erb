<% if displays.empty? %>
  <div class="alert alert-warning">
    <p>表示できる要素がありません</p>
  </div>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">名称</th>
        <th scope="col">権限</th>
        <th scope="col">送信先パス</th>
        <th scope="col">編集</th>
        <th scope="col">削除</th>
      </tr>
    </thead>
    <tbody>
      <% displays.each do |display| %>
        <tr class="align-middle">
          <td><%= display.name %></td>
          <td><%= display.permission %></td>
          <td><%= display.target_path %></td>
          <td><%= link_to "編集", edit_master_display_path(display.id), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to "削除", master_display_path(display.id), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate displays, action: "paginate" %>
<% end %>