<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote, turbo_stream: true }, rel: page.rel, class: 'page-link' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, data: { turbo_stream: true }, rel: page.rel, class: 'page-link' %>
  </li>
<% end %>
