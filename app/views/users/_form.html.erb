<% if user.errors.any? %>
  <div class="alert alert-warning">
    <p>入力エラーがあります<p>
    <% user.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </div>
<% end %>

<%= form_with model: user, url: url, data: { turbo: false } do |f| %>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-2">
      <%= f.label "ログインID", class: "col-form-label" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :name, class: 'form-control', placeholder: '表示名' %>
    </div>
  </div>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-2">
      <%= f.label "表示名", class: "col-form-label" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :display, class: 'form-control', placeholder: 'ログインID' %>
    </div>
  </div>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-2">
      <%= f.label "権限", class: "col-form-label" %>
    </div>
    <div class="col-md-3">
      <%= f.select :permission, options_for_select([["Admin", "admin"], ["GM", "gm"], ["Helper", "helper"]], selected: @user.permission), { include_blank: true }, { class: "form-select" } %>
    </div>
  </div>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-2">
      <%= f.label "パスワード", class: "col-form-label" %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード", class: 'form-control', maxlength: 72 %><br>
    </div>
  </div>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-2">
      <%= f.label "確認", class: "col-form-label" %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認", class: 'form-control', maxlength: 72 %><br>
    </div>
  </div>
  <div class="p-2">
    <%= f.submit '保存', class: 'btn btn-primary' %>
  </div>
<% end %>